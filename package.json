{
  "name": "doubledice-platform",
  "scripts": {
    "clean": "rimraf abi artifacts build cache generated typechain-types",
    "test": "hardhat test",
    "start": "docker-compose up",
    "contracts:deploy:local": "  hardhat run ./scripts/deploy.ts --network localhost",
    "contracts:deploy:rinkeby": "hardhat run ./scripts/deploy.ts --network rinkeby",
    "build:sol-interface-for-remix": "cat ./abi/DoubleDice.json | abi-to-sol --solidity-version=0.8.10 IDoubleDice > ./abi/IDoubleDice.sol",
    "graph:codegen": "graph codegen ./subgraph/subgraph.yaml",
    "graph:build": "graph build ./subgraph/subgraph.yaml",
    "graph:create:local": "graph create doubledice-com/doubledice-platform --node http://127.0.0.1:8020",
    "graph:deploy:local": "graph deploy doubledice-com/doubledice-platform --ipfs http://localhost:5001 --node http://127.0.0.1:8020 --version-label 0.0.1 ./subgraph/subgraph.yaml",
    "graph:all:local": "npm run graph:codegen && npm run graph:build && npm run graph:create:local && npm run graph:deploy:local",
    "test:local:create-vf": "hardhat run --network ganache ./scripts/create-test-vf.ts"
  },
  "devDependencies": {
    "@assemblyscript/loader": "0.19.22",
    "@graphprotocol/graph-cli": "0.25.0",
    "@graphprotocol/graph-ts": "0.24.1",
    "@nomiclabs/hardhat-ethers": "2.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.4.1",
    "@typechain/ethers-v5": "8.0.5",
    "@typechain/hardhat": "3.0.0",
    "@types/chai": "4.3.0",
    "@types/chai-subset": "1.3.3",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.12",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "abi-to-sol": "0.5.2",
    "assemblyscript": "0.19.22",
    "chai": "4.3.4",
    "chai-subset": "1.6.0",
    "dotenv": "10.0.0",
    "eslint": "8.5.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.2",
    "ethlint": "1.2.5",
    "hardhat": "2.8.0",
    "hardhat-abi-exporter": "2.4.0",
    "hardhat-gas-reporter": "1.0.6",
    "mocha": "9.1.3",
    "rimraf": "3.0.2",
    "ts-node": "10.4.0",
    "typechain": "6.0.5",
    "typescript": "4.5.4"
  }
}