{
  "name": "@doubledice/platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf abi artifacts build cache generated lib/generated graphql/generated",
    "test": "hardhat typechain && hardhat test",
    "start": "./scripts/start.sh",
    "stop": "docker-compose down --volumes",
    "contracts:deploy:local": "  hardhat run ./scripts/deploy.ts --network localhost",
    "contracts:deploy:rinkeby": "hardhat run ./scripts/deploy.ts --network rinkeby",
    "contracts:deploy:mumbai": "hardhat run ./scripts/deploy.ts --network mumbai",
    "graph:patch-abi-json": "cat ./generated/abi/DoubleDice.json | jq 'del(.[] | select(.type == \"error\"))' > ./generated/abi/DoubleDice.no-custom-errors.json",
    "graph:envsub-subgraph-yaml": "envsub --protect --env-file .env ./subgraph/subgraph.template.yaml ./subgraph/subgraph.envsubbed.yaml",
    "pregraph:codegen": "npm run graph:patch-abi-json && npm run graph:envsub-subgraph-yaml",
    "graph:codegen": "graph codegen ./subgraph/subgraph.envsubbed.yaml",
    "graph:build": "graph build ./subgraph/subgraph.envsubbed.yaml",
    "graph:create:local": "graph create doubledice-com/doubledice-platform --node http://127.0.0.1:8020",
    "graph:deploy:local": "graph deploy doubledice-com/doubledice-platform --ipfs http://localhost:5001 --node http://127.0.0.1:8020 --version-label 0.0.1 ./subgraph/subgraph.envsubbed.yaml",
    "graph:deploy:mumbai": "graph deploy doubledicedev/doubledice-mumbai --node https://api.thegraph.com/deploy/ --version-label 0.0.4 ./subgraph/subgraph.envsubbed.yaml",
    "graph:all:local": "npm run graph:generate-ts-bindings && npm run graph:codegen && npm run graph:build && npm run graph:create:local && npm run graph:deploy:local",
    "test:local:create-vf": "hardhat run --network ganache ./scripts/create-test-vf.ts",
    "pregraph:generate-ts-bindings": "mkdir -pv ./graphql/generated && cat ./graphql/schema.preamble.graphql ./subgraph/schema.graphql > ./graphql/generated/schema.graphql",
    "graph:generate-ts-bindings": "graphql-codegen --config ./graphql/codegen.yml",
    "codegen": "hardhat compile && npm run graph:codegen && npm run graph:generate-ts-bindings",
    "postinstall": "npm run codegen"
  },
  "main": "./lib/index.ts",
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "@assemblyscript/loader": "0.19.23",
    "@graphprotocol/graph-cli": "0.26.0",
    "@graphprotocol/graph-ts": "0.24.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.5",
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@nomiclabs/hardhat-waffle": "2.0.2",
    "@openzeppelin/contracts": "4.5.0",
    "@openzeppelin/contracts-upgradeable": "4.5.1",
    "@typechain/ethers-v5": "9.0.0",
    "@typechain/hardhat": "4.0.0",
    "abi-to-sol": "0.5.2",
    "assemblyscript": "0.19.23",
    "dotenv": "16.0.0",
    "envsub": "4.0.7",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.4",
    "ethlint": "1.2.5",
    "hardhat": "2.8.4",
    "hardhat-abi-exporter": "2.8.0",
    "hardhat-gas-reporter": "1.0.8",
    "typechain": "7.0.0"
  },
  "dependencies": {
    "ajv": "8.10.0",
    "ajv-formats": "2.1.1",
    "axios": "0.26.0"
  }
}