{
  "name": "@doubledice/platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf abi artifacts build cache generated lib/generated subgraph/generated",
    "test": "hardhat typechain && hardhat test",
    "coverage": "hardhat coverage",
    "contracts:deploy:local": "   hardhat run ./scripts/deploy.ts  --network localhost",
    "contracts:deploy:docker": "  hardhat run ./scripts/deploy.ts  --network docker",
    "contracts:deploy:rinkeby": " hardhat run ./scripts/deploy.ts  --network rinkeby",
    "contracts:deploy:mumbai": "  hardhat run ./scripts/deploy.ts  --network mumbai",
    "contracts:deploy:polygon": " hardhat run ./scripts/deploy.ts  --network polygon",
    "contracts:upgrade:local": "  hardhat run ./scripts/upgrade.ts --network localhost",
    "contracts:upgrade:docker": " hardhat run ./scripts/upgrade.ts --network docker",
    "contracts:upgrade:rinkeby": "hardhat run ./scripts/upgrade.ts --network rinkeby",
    "contracts:upgrade:mumbai": " hardhat run ./scripts/upgrade.ts --network mumbai",
    "graph:codegen": "./scripts/graph-codegen.sh",
    "graph:build": "npm run graph:codegen && graph build ./subgraph/generated/subgraph.yaml",
    "graph:create:local": " graph create doubledice-com/doubledice-platform --node http://localhost:8020",
    "graph:create:docker": "graph create doubledice-com/doubledice-platform --node http://graph-node:8020",
    "graph:deploy:local": "   graph deploy doubledice-com/doubledice-platform --ipfs http://localhost:5001 --node http://localhost:8020            --version-label 0.0.10 ./subgraph/generated/subgraph.yaml",
    "graph:deploy:docker": "  graph deploy doubledice-com/doubledice-platform --ipfs http://ipfs:5001      --node http://graph-node:8020           --version-label 0.0.10 ./subgraph/generated/subgraph.yaml",
    "graph:deploy:mumbai:1": "graph deploy doubledicedev/doubledice-mumbai                                 --node https://api.thegraph.com/deploy/ --version-label 0.0.10 ./subgraph/generated/subgraph.yaml",
    "graph:deploy:mumbai:2": "graph deploy doubledicedev/doubledice-mumbai2                                --node https://api.thegraph.com/deploy/ --version-label 0.0.10 ./subgraph/generated/subgraph.yaml",
    "graph:all:local": " npm run graph:generate-ts-bindings && npm run graph:codegen && npm run graph:build && npm run graph:create:local  && npm run graph:deploy:local",
    "graph:all:docker": "npm run graph:generate-ts-bindings && npm run graph:codegen && npm run graph:build && npm run graph:create:docker && npm run graph:deploy:docker",
    "test:local:create-vf": "hardhat run --network localhost ./scripts/create-test-vf.ts",
    "pregraph:generate-ts-bindings": "mkdir -pv ./lib/generated && cat ./subgraph/schema.preamble.graphql ./subgraph/schema.graphql > ./lib/generated/schema.graphql",
    "graph:generate-ts-bindings": "graphql-codegen --config ./subgraph/graphql-codegen.yml",
    "codegen": "hardhat compile && npm run graph:codegen && npm run graph:generate-ts-bindings",
    "postinstall": "npm run codegen",
    "pregen-sol-interface": "npx hardhat compile",
    "gen-sol-interface": "cat ./generated/abi/DoubleDice.json | abi-to-sol --validate --solidity-version=0.8.12 IDoubleDiceComplete > ./generated/IDoubleDiceComplete.sol",
    "lint:sol": "solhint contracts/**.sol"
  },
  "main": "./lib/index.ts",
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "@assemblyscript/loader": "0.20.3",
    "@graphprotocol/graph-cli": "0.26.0",
    "@graphprotocol/graph-ts": "0.26.0",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.5.0",
    "@openzeppelin/contracts-upgradeable": "4.5.2",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "6.0.0",
    "abi-to-sol": "0.5.2",
    "assemblyscript": "0.20.3",
    "dotenv": "16.0.0",
    "envsub": "4.0.7",
    "ethereum-waffle": "3.4.4",
    "ethers": "5.6.2",
    "ethlint": "1.2.5",
    "hardhat": "2.9.2",
    "hardhat-abi-exporter": "2.8.0",
    "hardhat-gas-reporter": "1.0.8",
    "solhint": "3.3.7",
    "solidity-coverage": "0.7.20",
    "typechain": "8.0.0"
  },
  "dependencies": {
    "ajv": "8.11.0",
    "ajv-formats": "2.1.1",
    "axios": "0.26.1"
  }
}